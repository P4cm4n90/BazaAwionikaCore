@model IEnumerable<BazaAwionika.Web.ViewModel.OxygenCylinderMainViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>
<body>
    <p>
        @Html.ActionLink("Utwórz nowy", "Create")
    </p>
    <table class="tablenormal">
        <tr>
            <th> @Html.DisplayNameFor(model => model.AircraftName) </th>
            <th>  @Html.DisplayNameFor(model => model.SerialNumber)</th>
            <th>  @Html.DisplayNameFor(model => model.DaysRemaining)</th>
            <th>  @Html.DisplayNameFor(model => model.DaysDiscardRemaining)</th>
            <th>  @Html.DisplayNameFor(model => model.DateExpiration)</th>
            <th>  @Html.DisplayNameFor(model => model.DateDiscard)</th>


        </tr>

        @foreach (var item in Model)
        {
            <tr class="kliki" data-id="@item.Id">
                <td>  @Html.DisplayFor(modelItem => item.AircraftName)</td>
                <td> @Html.DisplayFor(modelItem => item.SerialNumber)</td>
                <td> @Html.DisplayFor(modelItem => item.DaysRemaining) </td>
                <td> @Html.DisplayFor(modelItem => item.DaysDiscardRemaining) </td>
                <td> @Html.DisplayFor(modelItem => item.DateExpiration) </td>
                <td> @Html.DisplayFor(modelItem => item.DateDiscard) </td>
            </tr>
        }

    </table>
    <div id="itemDetails">
    </div>
</body>
</html>

@section scripts{
    @Scripts.Render("~/bundles/jquery")
    <script type='text/javascript'>
        $(".kliki").on("click", function () {
            var itemId = $(this).data('id');
            $.ajax({
                url: "@Url.Action("Details", "OxygenCylinderMain")",
                type: "GET",
                data: {
                    "id": itemId
                },
                success: function (result) {
                    $("#itemDetails").html(result);
                },
                error: function (data) {
                    console.log("ERROR: ", data)
                }
            })
        });

    </script>
}
