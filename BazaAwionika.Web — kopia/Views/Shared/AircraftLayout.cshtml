@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width, initial-scale = 1.0">


    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false);
</head>
<body>
    <div class="tab">
        <a href="@Url.Action("Index", "Aircrafts")">Samoloty</a>
        <button class="tablinks" onclick="location.href='@Url.Action("Index", "AircraftMaintenance")'">Prace</button>
        <button class="tablinks" onclick="location.href='@Url.Action("Index", "AircraftBiuletin")'">Biuletyny</button>
        <button class="tablinks" onclick="location.href='@Url.Action("Index", "AircraftStatus")'">Baza statusów</button>
    </div>

    @RenderBody()

    <hr />
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
