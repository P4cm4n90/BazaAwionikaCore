@using BazaAwionika.Web.ViewModel;
@model IEnumerable<AircraftStatusViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AircraftLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Utwórz nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
    }

</table>
<div id="itemDetails">
</div>


<script type='text/javascript' src="~/lib/jquery/dist/jquery.js">

        $(".kliki").on("click", function () {
            var itemId = $(this).data('id');
            $.ajax({
                url: "@Url.Action("Details", "AircraftStatus")",
                type: "GET",
                data: {
                    "id": itemId
                },
                success: function (result) {
                    $("#itemDetails").html(result);
                },
                error: function (data) {
                    console.log("ERROR: ", data)
                }
            })
        });




</script>