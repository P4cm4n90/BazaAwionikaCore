@using BazaAwionika.Web.ViewModel;
@model IEnumerable<GeneratorViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="tablenormal">
    <tr>
        <th> @Html.DisplayNameFor(model => model.AircraftName) </th>
        <th> @Html.DisplayNameFor(model => model.AircraftFlightHours) </th>
        <th>  @Html.DisplayNameFor(model => model.SerialNumber)</th>
        <th>  @Html.DisplayNameFor(model => model.FlightHoursBrushesExpiration)</th>
        <th>  @Html.DisplayNameFor(model => model.FlightHoursBrushesRemaining)</th>
        <th>  @Html.DisplayNameFor(model => model.FlightHoursBearingExpiration)</th>
        <th>  @Html.DisplayNameFor(model => model.FlightHoursBearingRemaining)</th>
        <th>  @Html.DisplayNameFor(model => model.FlightHoursOverhaulExpiration)</th>
        <th>  @Html.DisplayNameFor(model => model.FlightHoursOverhaulRemaining)</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr class="kliki" data-id="@item.Id">
            <td>  @Html.DisplayFor(modelItem => item.AircraftName)</td>
            <td>  @Html.DisplayFor(modelItem => item.AircraftFlightHours)</td>
            <td> @Html.DisplayFor(modelItem => item.SerialNumber)</td>
            <td> @Html.DisplayFor(modelItem => item.FlightHoursBrushesExpiration) </td>
            <td> @Html.DisplayFor(modelItem => item.FlightHoursBrushesRemaining) </td>
            <td> @Html.DisplayFor(modelItem => item.FlightHoursBearingExpiration) </td>
            <td> @Html.DisplayFor(modelItem => item.FlightHoursBearingRemaining) </td>
            <td> @Html.DisplayFor(modelItem => item.FlightHoursOverhaulExpiration) </td>
            <td> @Html.DisplayFor(modelItem => item.FlightHoursOverhaulRemaining) </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detale", "Details", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div id="itemDetails">
</div>

@section scripts{
    <script type='text/javascript' src="~/lib/jquery/dist/jquery.js"></script>
    <script type="text/javascript">

        $(".kliki").on("click", function () {
            var itemId = $(this).data('id');
            $.ajax({
                url: "@Url.Action("Details", "Generator")",
                type: "GET",
                data: {
                    "id": itemId
                },
                success: function (result) {
                    $("#itemDetails").html(result);
                },
                error: function (data) {
                    console.log("ERROR: ", data)
                }
            })
        });

    </script>
}
