@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width, initial-scale = 1.0">


    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/w3.css" />
    @RenderSection("styles", false)
</head>
<body>
    <div class="tab" id="aircraftLayoutTab">

        <button class="tablinks" onclick="location.href='@Url.Action("Create", "Aircrafts")'">@Locale.Strings.Create</button>
        <button class="tablinks" onclick="location.href='@Url.Action("Index", "AircraftMaintenance")'">@Locale.Strings.AircraftMaintenance</button>
        <button class="tablinks" onclick="location.href='@Url.Action("Index", "AircraftBiuletin")'">@Locale.Strings.AircraftBiuletin</button>
        <button class="tablinks" onclick="location.href='@Url.Action("Index", "AircraftStatus")'">@Locale.Strings.AircraftStatus</button>
    </div>

    @RenderBody()

    <hr />
    <script type='text/javascript' src="~/lib/jquery/dist/jquery.js"></script>
    <script type='text/javascript' src="~/lib/bootstrap/dist/js/bootstrap.js"> </script>
    @RenderSection("scripts", required: false)

</body>
</html>
